@model Category

<!-- Create a new category form with method post -->
<form method="post" class="container mt-5" style="max-width: 600px;">
    <div class="card bg-dark bg-opacity-50 border-0 shadow-lg rounded-4">
        <div class="card-body p-4">
            <div class="row pb-3 text-center">
                <h2 class="fw-bold text-light">Create Category</h2>
                <hr class="text-secondary" />
            </div>

            <!-- Add validation summary -->
            <div asp-validation-summary="All"></div>

            <div class="mb-3">
                <label asp-for="Name" for="categoryName" class="form-label text-light"></label>
                <input asp-for="Name" type="text" id="categoryName" class="form-control bg-dark bg-opacity-25 border-secondary text-light" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder" for="displayOrder" class="form-label text-light"></label>
                <input asp-for="DisplayOrder" id="displayOrder" class="form-control bg-dark bg-opacity-25 border-secondary text-light" placeholder="Enter display order" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <!-- Responsive button layout using bootstrap -->
            <div class="d-flex flex-column flex-sm-row justify-content-between gap-2 pt-3">
                <a asp-controller="Category" asp-action="Index"
                   class="btn btn-outline-secondary w-100 w-sm-auto">
                    ← Back to List
                </a>
                <button type="submit" class="btn btn-outline-light w-100 w-sm-auto">
                    Create
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}