@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            @* anchor tag to tell which controller and which action this button will take the user to *@
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-dark">
                <i class="bi bi-plus-square m-1"></i>Create New Product
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped table-dark">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        <!-- Loops through obj Product and display all of the categories -->
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Description</td>
                <td>@obj.Price</td>
                <td></td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <!-- Use asp-route- to pass the ID of each product -->
                        <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-dark">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-x-square"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>